<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F9FAFB"
    android:padding="16dp"
    tools:context=".Delivery_Boy.D_Boy_ProfileData">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_back"
            android:layout_gravity="start"
            />

        <!-- Profile Image with Add Icon -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/myprofile"
                android:scaleType="centerCrop"
                android:background="@drawable/d_boy_circle_bg"
                android:padding="4dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add"
                android:background="@drawable/d_boy_circle_grey"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:padding="5dp"
                />
        </FrameLayout>

        <!-- Input Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Full Name"
                android:background="@drawable/d_boy_input_bg"
                android:paddingHorizontal="16dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/d_boy_input_bg"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Phone"
                android:background="@drawable/d_boy_input_bg"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Email"
                android:background="@drawable/d_boy_input_bg"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/d_boy_btn_grey"
            android:layout_marginTop="185dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>