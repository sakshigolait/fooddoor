<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adminNewDetail_dialogRoot"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adminNewDetail_dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assign Delivery Boy"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/adminNewDetail_dialogLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a delivery boy:"
        android:layout_marginBottom="6dp" />

    <Spinner
        android:id="@+id/adminNewDetail_spinnerDeliveryBoy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp" />

</LinearLayout>
