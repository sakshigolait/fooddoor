<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <!-- CONTENT SCROLL AREA -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSubmit"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                tools:ignore="ExtraText">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/backicon"
                    android:padding="4dp"
                />

                <TextView
                    android:id="@+id/tvSendFeedbackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Send Feedback"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
            </LinearLayout>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell us what you love about the app, or what we could be doing better."
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:textColor="?android:textColorPrimary" />

            <!-- Enter feedback label -->
            <TextView
                android:id="@+id/tvEnterFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter feedback"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="?android:textColorPrimary" />

            <!-- Feedback input -->
            <EditText
                android:id="@+id/etFeedback"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:hint="Type your feedback here..."
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:padding="8dp"
                android:textColor="?android:textColorPrimary" />

            <!-- Divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                android:background="#DDDDDD" />

            <!-- Help card -->
            <LinearLayout
                android:id="@+id/helpCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clipToPadding="false"
                android:shape="rectangle">

                <ImageView
                    android:id="@+id/imgStar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart" />  <!-- apna star icon -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvHelpTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Need help with your order?"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/tvHelpSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get instant help from our customer support team"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="?android:textColorPrimary" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM SUBMIT BUTTON -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Submit feedback"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="#6F7385" />
</RelativeLayout>
