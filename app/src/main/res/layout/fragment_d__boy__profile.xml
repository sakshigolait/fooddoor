<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/green"
        android:id="@+id/textView"
        android:text="  Profile"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />




    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F6FA"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="4dp"
                android:paddingBottom="20dp"
                android:backgroundTint="#FFFFFF"
                android:clipToOutline="true"
                android:background="@drawable/d_boy_rounded_bg">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/myprofile"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/d_boy_circle_bg"
                    android:padding="4dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_name"
                    android:text="Krish Joe"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#222222" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_userid"
                    android:text="ID: 567890"
                    android:textSize="15sp"
                    android:textColor="#777777" />
            </LinearLayout>

            <!-- Options Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="4dp"
                android:background="@drawable/d_boy_rounded_bg">

                <LinearLayout
                    android:id="@+id/btn_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/bell"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DboybtnNotifications"
                        android:text="Notifications"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

                <LinearLayout
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/share"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DboybtnShare"
                        android:text="Share and Earn"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        tools:ignore="DuplicateIds" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />

                <LinearLayout
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/settings"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DboybtnSettings"
                        android:text="Settings"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE" />


            </LinearLayout>

            <!-- Logout Button -->
            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"

                android:background="@drawable/d_boy_rounded_bg">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/out"
                    />
                <TextView
                    android:id="@+id/DboybtnLogout"
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>