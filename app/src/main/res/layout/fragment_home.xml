<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/locationiconhomefrag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/loc2" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:queryHint="Search food..."
                android:background="@drawable/shape2"
                />

        </LinearLayout>

        <!-- Offer + slider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerOffers"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="12dp" />

        <!-- Categories (horizontal) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Food -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/food2" />
                    <TextView
                        android:id="@+id/tvFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"/>
                </LinearLayout>

                <!-- Drinks -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/soda" />
                    <TextView
                        android:id="@+id/tvDrinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks"/>
                </LinearLayout>

                <!-- Cake -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/cake2" />
                    <TextView
                        android:id="@+id/tvCake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cake"/>
                </LinearLayout>

                <!-- Ice Cream -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/icecream" />
                    <TextView
                        android:id="@+id/tvIceCream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ice Cream"/>
                </LinearLayout>

                <!-- Pizza -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/pizza" />
                    <TextView
                        android:id="@+id/tvPizza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizza"/>
                </LinearLayout>

                <!-- Noodles -->
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="10dp">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/noodles" />
                    <TextView
                        android:id="@+id/tvNoodles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noodles"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Food Menu Grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Menu"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFoodMenu"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:nestedScrollingEnabled="false"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>