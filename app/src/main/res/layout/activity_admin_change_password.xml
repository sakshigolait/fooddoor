<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAdminChangePassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/green"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Change Password"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/icon_arrow_back"/>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView style="@style/Label"
                android:text="Current Password"/>

            <EditText
                android:id="@+id/etAdminCurrentPassword"
                style="@style/Input"
                android:background="@drawable/bg_input"
                android:inputType="textPassword"
                android:hint="Enter current password"/>

            <TextView style="@style/Label"
                android:text="New Password"/>

            <EditText
                android:id="@+id/etAdminNewPassword"
                style="@style/Input"
                android:inputType="textPassword"
                android:background="@drawable/bg_input"
                android:hint="Enter new password"/>

            <TextView style="@style/Label"
                android:text="Confirm New Password"/>

            <EditText
                android:id="@+id/etAdminConfirmPassword"
                style="@style/Input"
                android:inputType="textPassword"
                android:background="@drawable/bg_input"
                android:hint="Confirm new password"/>

            <Button
                android:id="@+id/btnAdminUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="Update Password"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/green"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
