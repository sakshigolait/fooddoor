<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminOngoingDetail_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP ORANGE BAR -->
    <LinearLayout
        android:id="@+id/adminOngoingDetail_appBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/green"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/adminOngoingDetail_buttonBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            app:tint="@color/white"
            android:src="@drawable/icon_arrow_back" />

        <TextView
            android:id="@+id/adminOngoingDetail_appBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Ongoing Order"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/adminOngoingDetail_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/adminOngoingDetail_mainContainer"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER (BLUE AREA) -->
            <LinearLayout
                android:id="@+id/adminOngoingDetail_headerContainer"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#E3F2FD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/adminOngoingDetail_imageAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:id="@+id/adminOngoingDetail_nameTimeContainer"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/adminOngoingDetail_textCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Name"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/adminOngoingDetail_textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today at 12:33 AM"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adminOngoingDetail_textOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order id: 348"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- PHONE ROW -->
            <LinearLayout
                android:id="@+id/adminOngoingDetail_phoneRow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adminOngoingDetail_textPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+1 234 5678 910" />

                <Button
                    android:id="@+id/adminOngoingDetail_buttonCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:background="@drawable/btn_border_green"
                    android:textColor="@color/green" />
            </LinearLayout>

            <!-- EMAIL ROW -->
            <LinearLayout
                android:id="@+id/adminOngoingDetail_emailRow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adminOngoingDetail_textEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="customer@example.com" />

                <Button
                    android:id="@+id/adminOngoingDetail_buttonEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:background="@drawable/btn_border_green"
                    android:textColor="@color/green" />
            </LinearLayout>

            <!-- ADDRESS ROW -->
            <LinearLayout
                android:id="@+id/adminOngoingDetail_addressRow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adminOngoingDetail_textAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3322 Sweetwater Springs Blvd, Spring Valley, CA 91977, USA" />

            </LinearLayout>

            <!-- MESSAGE -->
            <TextView
                android:id="@+id/adminOngoingDetail_labelMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/adminOngoingDetail_textMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Customer message..." />

            <!-- ITEMS HEADER -->
            <TextView
                android:id="@+id/adminOngoingDetail_labelItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <!-- table header -->
            <LinearLayout
                android:id="@+id/adminOngoingDetail_itemsHeaderRow"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adminOngoingDetail_headerItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Item"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adminOngoingDetail_headerQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Quantity"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adminOngoingDetail_headerPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ITEMS LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/adminOngoingDetail_itemsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- INVOICE & TOTALS -->
            <LinearLayout
                android:id="@+id/adminOngoingDetail_invoiceRow"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:id="@+id/adminOngoingDetail_totalsContainer"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/adminOngoingDetail_textSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal: $0.00" />

                    <TextView
                        android:id="@+id/adminOngoingDetail_textDeliveryFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Fee: $0.00" />

                    <TextView
                        android:id="@+id/adminOngoingDetail_textServiceTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service tax (0%): $0.00" />

                    <TextView
                        android:id="@+id/adminOngoingDetail_textDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount (0%): $0.00" />

                    <TextView
                        android:id="@+id/adminOngoingDetail_textTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: $0.00"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM STATUS + CANCEL BAR -->
    <LinearLayout
        android:id="@+id/adminOngoingDetail_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#FFFFFF">

        <!-- status row -->
        <LinearLayout
            android:id="@+id/adminOngoingDetail_statusRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/adminOngoingDetail_statusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status:"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/adminOngoingDetail_spinnerStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- cancel button -->
        <Button
            android:id="@+id/adminOngoingDetail_buttonCancelOrder"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:text="Cancel Order"
            android:textColor="@android:color/white"
            android:backgroundTint="#CC302D" />
    </LinearLayout>

</LinearLayout>
