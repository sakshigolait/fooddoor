<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back to login -->
        <TextView
            android:id="@+id/srlogin"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Back to login"
            android:textColor="#777777"
            android:textSize="15sp"
            android:drawableStart="@drawable/backicon"
            android:layout_marginTop="24dp" />

        <!-- Sign Up Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="24dp" />

        <!-- ===== ADDED 3 BUTTONS (MERGED) ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnUser"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="User"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/green" />

            <Button
                android:id="@+id/btnAdmin"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:text="Admin"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/green" />

            <Button
                android:id="@+id/btnDelivery"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Delivery"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/green"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:gravity="center" />

        </LinearLayout>
        <!-- ===== END MERGE ===== -->

        <!-- Name -->
        <EditText
            android:id="@+id/srname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Name"
            android:drawableStart="@drawable/shape"
            android:padding="12dp"
            android:background="@drawable/shape"
            android:layout_marginTop="24dp" />

        <!-- Mobile -->
        <EditText
            android:id="@+id/srnumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mobile No."
            android:drawableStart="@drawable/shape"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/shape"
            android:layout_marginTop="16dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/sremailid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email id"
            android:drawableStart="@drawable/shape"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/shape"
            android:layout_marginTop="16dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/srpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:drawableStart="@drawable/shape"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/shape"
            android:layout_marginTop="16dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/green"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>
